<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaxAndroid.Pages.AddItems"
             Shell.NavBarIsVisible="False">


    <Grid
        ColumnDefinitions="*,*">
        <!-- first column-->
        <Grid
            Grid.Column="0"
            RowDefinitions="auto,2*,auto"            
          >
            <Image
                Grid.Row="0"
                Source="shahs.png"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                VerticalOptions="End"
                />

            <!--<Frame
                Grid.Row="1"
                CornerRadius="12"
                HasShadow="False"
                Padding="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                IsClippedToBounds="True">
                <Image
                    Source="promo.jpeg"
                    Aspect="AspectFit"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Frame>-->
            <Border
                Grid.Column="0"
                Grid.Row="1"
                Stroke="Transparent"
                BackgroundColor="#FFFFFF"
                StrokeShape="RoundRectangle 12"
                 Padding="40"
               >
                <Grid
                    ColumnDefinitions="*,*"
                    RowDefinitions="Auto,Auto,Auto,Auto"
                    RowSpacing="10"
                    VerticalOptions="End"
                   >
                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Sub Total: "
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Discount: "
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Tax: "
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Total: "
                        FontSize="Subtitle"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="0"
                        Text="{Binding TotalPrice, StringFormat='$ {0:F2}'}"
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="1"
                        Text="$ 0.00"
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="2"
                        Text="$ 0.00"
                        FontSize="Header"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        VerticalOptions="Center"/>
                    <Label
                        Grid.Column="1"
                        Grid.Row="3"
                        Text="$ 0.00"
                        FontSize="Subtitle"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        VerticalOptions="Center"/>
                </Grid>
            </Border>
            <Grid
                Grid.Column="0"
                Grid.Row="2"
                Padding="0,0,0,20"
                >

                <VerticalStackLayout
                    Margin="0,0,0,20">

                    <HorizontalStackLayout HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           >
                        <BoxView HeightRequest="1"
                                 WidthRequest="60"
                                 Color="Gray"
                                 VerticalOptions="Center"/>
                        
                        <Label Text="We accept"
                               FontSize="Caption"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <BoxView HeightRequest="1"
                                 WidthRequest="60"
                                 Color="Gray"
                                 VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="30"
                                           HorizontalOptions="Center">
                        <Image Source="applepay.png"
                               HeightRequest="30"/>
                        <Image Source="googlepay.png"
                               HeightRequest="30"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>


        </Grid>
        <!--second column-->
        <Border
            Grid.Column="1"
            Stroke="transparent"
            BackgroundColor="#F9FAFC"
            StrokeShape="RoundRectangle 12"
            >
            <Grid
                Grid.Column="1"
                RowDefinitions="Auto,5*,auto"
                
                Margin="2"
                Padding="5,0"
                >
                <Grid
                    ColumnDefinitions="*,*"
                    Padding="5">
                    <Grid
                        ColumnDefinitions="Auto,Auto">
                        <Label
                            Grid.Column="0"
                            Text="OrderNo: 200"
                            FontSize="Micro"
                            FontAttributes="Bold"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            TextColor="#FFBDBDBE"/>
                        <!-- <CollectionView
                        >
                        <CollectionView.ItemTemplate>
                        <DataTemplate>
                        <Label
                        Grid.Column="0"
                        Text="20"
                        FontSize="19"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        TextColor="black"/>
                        </DataTemplate>
                        </CollectionView.ItemTemplate>
                        </CollectionView> -->

                    </Grid>
                    <Label
                        Grid.Column="1"
                        Text="Shahs Halal Food"
                        FontSize="Micro"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        TextColor="#FFBDBDBE"/>
                </Grid>
                <CollectionView
                    Grid.Row="1"
                    SelectionMode="None"
                    ItemsSource="{Binding selectedItem}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <Grid
                                ColumnDefinitions="2*,2*"
                                Padding="5,0"
                                ColumnSpacing="5">
                                <!-- <Border
                                Grid.Column="0"
                                Stroke="#DFDFDF"
                                HeightRequest="50"
                                WidthRequest="50">


                                <Image
                                Source="items.png"
                                HeightRequest="30"
                                WidthRequest="30"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"/>
                                </Border> -->
                                <Grid
                                    RowDefinitions="Auto,auto"
                                    Grid.Column="0">
                                    <Label
                                        Grid.Row="0"
                                        Text="{Binding ItemName}"
                                        FontSize="Micro"
                                        TextColor="Black"/>
                                    <Grid
                                        Grid.Row="1"
                                        ColumnDefinitions="Auto,auto"
                                        HorizontalOptions="Start"
                                        >
                                        <Label
                                            Grid.Column="0"
                                            Text="Item Price: "
                                            TextColor="#9CA0A2"
                                            FontSize="9"/>

                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding Price,StringFormat='{0:C}'}"
                                            TextColor="#9CA0A2"
                                            FontSize="9"/>
                                    </Grid>
                                </Grid>
                                <Grid
                                    RowDefinitions="Auto,auto"
                                    RowSpacing="2"
                                    Grid.Column="1">
                                    <Label
                                        Grid.Row="0"
                                        Text="{Binding TotalPrice, StringFormat='{0:C}'}"
                                        FontSize="Micro"
                                        HorizontalOptions="End"
                                        TextColor="Black"/>
                                    <Grid
                                        Grid.Row="1"
                                        ColumnDefinitions="Auto,auto"
                                        HorizontalOptions="End">
                                        <Label
                                            Grid.Column="0"
                                            Text="Qty: "
                                            TextColor="#B8BBBE"
                                            FontSize="9"/>

                                        <Label
                                            Grid.Column="1"
                                            Text="{Binding Quantity}"
                                            TextColor="#B8BBBE"
                                            FontSize="9"/>
                                    </Grid>
                                </Grid>


                            </Grid>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
                <Button
                    Grid.Row="2"
                    Text="Add tip"
                    FontSize="Micro"
                    BackgroundColor="#FFBDBCBC"
                    TextColor="Black"
                    HorizontalOptions="End"
                    Clicked="NavigateToAddTips"
                    Padding="5"
                    />
            </Grid>
        </Border>
    </Grid>

</ContentPage>

